@model ProductUpdateVM

@{
    ViewData["Title"] = "Edit";
}


<div class="container my-5">
    <h1>Product Edit</h1>

    @foreach (var item in Model.Images)
    {
        <div class="img-detail">
            <img src="~/assets/images/website-images//@item.Image" style="width:250px;height:200px" />
        </div>
    }
    

    <form class="form-sample" method="post" enctype="multipart/form-data">
        <label for="formFile" class="form-label">Choose a new image for product</label>
        <input class="form-control" id="customFile" asp-for="Photos" />

        <div class="img-detail">
            <img src="~/assets/images/website-images//@Model.MainImage" style="width:250px;height:200px" />
        </div>

        <label for="formFile" class="form-label">Choose a new image for product</label>
        <input class="form-control" id="customFile" asp-for="MainPhoto" />

        <div class="img-detail">
            <img src="~/assets/images/website-images//@Model.HoverImage" style="width:250px;height:200px" />
        </div>

        <label for="formFile" class="form-label">Choose a new image for product</label>
        <input class="form-control" id="customFile" asp-for="HoverPhoto" />

        <label for="formFile" class="form-label">Name</label>
        <textarea class="form-control" id="slider-title-text" asp-for="Name" rows="3"></textarea>
        <span class="text-danger" asp-validation-for="Name">@ViewBag.error</span>

        <label for="formFile" class="form-label">Description</label>
        <input type="text mt-3" class="form-control" id="customFile" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description">@ViewBag.error</span>

        <label for="formFile" class="form-label">Price</label>
        <textarea class="form-control" id="slider-title-text" asp-for="Price" rows="3"></textarea>
        <span class="text-danger" asp-validation-for="Price">@ViewBag.error</span>

        <label for="formFile" class="form-label">Sale Count</label>
        <textarea class="form-control" id="slider-title-text" asp-for="SaleCount" rows="3"></textarea>
        <span class="text-danger" asp-validation-for="SaleCount">@ViewBag.error</span>

        <label for="formFile" class="form-label">Stock Count</label>
        <textarea class="form-control" id="slider-title-text" asp-for="StockCount" rows="3"></textarea>
        <span class="text-danger" asp-validation-for="StockCount">@ViewBag.error</span>

        <label for="formFile" class="form-label">SKU</label>
        <textarea class="form-control" id="slider-title-text" asp-for="SKU" rows="3"></textarea>
        <span class="text-danger" asp-validation-for="SKU">@ViewBag.error</span>

        <div class="form-group">
            <label class="my-2">Add Color</label>
            <select class="form-control" id="customFile" asp-for="ColorId" asp-items="@ViewBag.colors"></select>
        </div>
        <div class="form-group">
            <label class="my-2">Add Size</label>
            <select class="form-control" id="customFile" asp-for="SizeIds" asp-items="@ViewBag.sizes"></select>
        </div>
        <div class="form-group">
            <label class="my-2">Add Tag</label>
            <select class="form-control" id="customFile" asp-for="TagIds" asp-items="@ViewBag.tags"></select>
        </div>
        <div class="form-group">
            <label class="my-2">Add Category</label>
            <select class="form-control" id="customFile" asp-for="CategoryIds" asp-items="@ViewBag.categories"></select>
        </div>

        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>

    </form>

</div>

@section Scripts{
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("slider-title-text");
    </script>
}








