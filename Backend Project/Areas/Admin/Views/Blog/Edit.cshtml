@model BlogUpdateVM

@{
    ViewData["Title"] = "Edit";
}

<div class="container my-5">
    <div class="product-images d-flex ">
        @foreach (var blog in Model.Images)
        {
            <img src="~/assets/images/website-images//@blog.Image" style="width:70px;height:70px" alt="image" />
        }

    </div>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label class="my-2">Images</label>
            <input class="form-control" id="customFile" asp-for="Photo" />
        </div>

        <div class="form-group">
            <label class="my-2">Title</label>
            <input class="form-control " id="customFile" asp-for="Title" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label class="my-2">Description</label>
            <textarea class="form-control" id="description-text" asp-for="Description" rows="5"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <label class="my-2">Category</label>
            <select class="form-control" id="customFile" asp-for="AuthorId" asp-items="@ViewBag.author"></select>
        </div>
        
        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>









