@model BLog
@{
    ViewData["Title"] = "Detail";
}

<div class="container my-5">

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Author Name
                    </th>
                </tr>
            </thead>
            <tbody>


                <tr>
                    <td class="py-1">
                        <img src="~/assets/images/website-images//@Model.Images.FirstOrDefault().Image" style="width:70px;height:70px" alt="image" />
                    </td>

                    <td>
                        @Model.Title
                    </td>
                    <td>
                        @Model.Description
                    </td>
                    <td>
                        @Model.Author.Name
                    </td>

                </tr>



            </tbody>
        </table>
    </div>


    <a class="btn btn-info mt-3" asp-action="Index">Back</a>
</div>



